{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "lib": ["es2020", "dom"],  // 或者使用 ["es2020", "dom", "es2020.promise"]
    "target": "es2020",
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    // "noUnusedLocals": true, // 
    // "noUnusedParameters": true, // 
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}